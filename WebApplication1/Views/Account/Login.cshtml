
@model WebApplication1.Models.User_account
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="~/css/login.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <span style="color:red">@ViewBag.msg</span>
        <form action="" method="post">
            <div class="container">
                <label>Account</label>
                <input type="text" name="Account" required/>
           
                <label>Password</label>
                <input type="password" name="Password" required/>
            
            <button type="submit" class="btn btn-outline-success">登入</button>
            </div>
            <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("Register", "Account")'">註冊帳號</button>
        </form>
    </body>
</html>